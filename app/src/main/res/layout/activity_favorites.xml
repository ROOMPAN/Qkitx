<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/white"
        app:tabIndicatorColor="@color/status_color_red"
        app:tabSelectedTextColor="@color/status_color_red"
        app:tabTextColor="@color/black">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabTextColor="@color/black" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabTextColor="@color/black" />
    </android.support.design.widget.TabLayout>

    <View
        android:id="@+id/my_page_sell_divider"
        style="@style/my_page_item_divider"
        android:layout_alignParentBottom="true"
        android:background="@color/tab_layout_divider" />

    <!--可滑动的布局内容-->
    <android.support.v4.view.ViewPager
        android:id="@+id/activity_favorites_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>