<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/base_topbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_webview_topbar_left_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_back_arrow_gray" />

        <TextView
            android:id="@+id/activity_webview_topbar_left_close_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/activity_webview_topbar_left_back_img"
            android:paddingRight="15dp"
            android:text="关闭"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/activity_webview_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/activity_webview_topbar_right_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="清空"
            android:textColor="@color/login_bg"
            android:textSize="16dp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        style="@style/my_page_item_divider"
        android:layout_alignParentBottom="true"
        android:background="@color/tab_layout_divider" />
</LinearLayout>